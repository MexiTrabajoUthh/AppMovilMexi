<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imgV8"
                android:layout_width="309dp"
                android:layout_height="136dp"
                android:layout_marginTop="24dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/back" />

            <ImageView
                android:id="@+id/ivInfoMiVac"
                android:layout_width="48dp"
                android:layout_height="45dp"
                android:layout_marginTop="44dp"
                android:layout_marginEnd="12dp"
                app:layout_constraintEnd_toEndOf="@+id/imgV8"
                app:layout_constraintStart_toEndOf="@+id/txtNombreMiVac"
                app:layout_constraintTop_toTopOf="@+id/imgV8"
                app:srcCompat="@drawable/info" />

            <TextView
                android:id="@+id/txtNombreMiVac"
                android:layout_width="223dp"
                android:layout_height="57dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/opensans_regular"
                android:text="Vacante"
                android:textColor="#656565"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="@+id/imgV8"
                app:layout_constraintTop_toTopOf="@+id/imgV8" />

            <TextView
                android:id="@+id/txtTurno"
                android:layout_width="208dp"
                android:layout_height="35dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/opensans_regular"
                android:text="Turno"
                android:textColor="#656565"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="@+id/txtNombreMiVac"
                app:layout_constraintHorizontal_bias="0.516"
                app:layout_constraintStart_toStartOf="@+id/imgV8"
                app:layout_constraintTop_toBottomOf="@+id/txtNombreMiVac" />

            <TextView
                android:id="@+id/txtIdVac"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textColor="#F5F5F5"
                app:layout_constraintEnd_toEndOf="@+id/ivInfoMiVac"
                app:layout_constraintStart_toStartOf="@+id/ivInfoMiVac"
                app:layout_constraintTop_toBottomOf="@+id/ivInfoMiVac" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>